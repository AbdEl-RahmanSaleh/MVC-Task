@{
}
@model Product


<h2>Product Details</h2>

<div>
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">
                <strong>Price:</strong> @Model.price<br />
                <strong>CreatedAt:</strong> @Model.CreatedAt<br />
                <img src="~/files/images/@Model.ImageName" class="img-thumbnail rounded-circle" style="width:200px; height:200px; object-fit:cover;" alt="@Html.DisplayFor(x  => Model.Name)">
            </p>
        </div>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
