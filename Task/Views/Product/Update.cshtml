@{
}


@model Product
<div class="row mb-3">
    <div class="col-2"></div>
    <div class="col-8">
        <form method="post" asp-action="Update" asp-controller="product" enctype="multipart/form-data">

            <div class="mb-3">
                <label asp-for="@Model.Name" class="col-form-label">Product Name</label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.price" class="col-form-label">Product Price</label>
                <input asp-for="@Model.price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>

            <div class="mb-3">
            <img src="~/files/images/@Model.ImageName" class="img-thumbnail rounded-circle" style="width:200px; height:200px; object-fit:cover;" alt="@Html.DisplayFor(x  => Model.Name)">
            </div>


            <div class="mb-3">
                <label asp-for="@Model.Image" class="col-form-label">Product Image</label>
                <input asp-for="@Model.Image" type="file" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
    <div class="col-2"></div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
