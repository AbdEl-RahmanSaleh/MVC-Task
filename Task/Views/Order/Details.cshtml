@using Core.Entities
@model Order


<h2>Order Details</h2>

<div>
    <h3 >@Model.CustomerName</h3>
    @foreach (var item in Model.OrderItems )
    {
        <div class="card mb-3 w-50 d-flex flex-row justify-content-between">
            <div class="card-body d-inline-block ">
                <h5 class="card-title"><strong>Product Name :</strong>@item.productName</h5>
                <p class="card-text">
                    <strong>Quantity:</strong> @item.Quantity<br />
                    <strong>Total:</strong> @item.ItemTotal<br />
                </p> 
            </div>
            <div>
                <img src="~/files/images/@item.ImageName" class="img-thumbnail rounded-circle " style="width:200px; height:200px; object-fit:cover;"> 
            </div>
        </div>
    }
    <h3> <strong>Total:</strong> @Model.Total<br /></h3>

</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
